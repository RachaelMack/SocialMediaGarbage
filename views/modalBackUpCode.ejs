<div class="container">
        <div class="row frontPageContent">
            <div class="modal fade" tabindex="-1" role="dialog" data-toggle="modal" data-target="#myModal" id="register">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <center>
                                <h4 class="modal-title">Register with an Email</h4>
                            </center>
                        </div>
                        <div class="modal-body">
                            <!-- LOGIN FORM -->
                            <form action="/signup" method="post">
                                <div class="row">
                                    <div class="col-md-1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="exampleInputName2" name="name" placeholder="Name">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-1"><span class="glyphicon glyphicon-envelope registerIcon" aria-hidden="true" id="registerE"></span></div>
                                    <div class="col-md-10">
                                        <div class="form-group">

                                            <input type="email" class="form-control" id="exampleInputEmail2" name="email" placeholder="E-mail">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-1"><span class="glyphicon glyphicon-lock registerIcon" aria-hidden="true" id="lock"></span></div>

                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <input type="password" class="form-control" id="exampleInputName2" name="password" placeholder="Password">
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-warning btn-lg btnSignUp">Signup</button>
                            </form>
                        </div>
                        <div>

                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->

            <div class="modal fade" tabindex="-1" role="dialog" data-toggle="modal" data-target="#myModal" id="signin">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Login</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <form action="/login" method="post">

                                        <div class="row">
                                            <div class="col-md-1"><span class="glyphicon glyphicon-envelope registerIcon " aria-hidden="true" id="registerE"></span></div>
                                            <div class="col-md-10">
                                                <div class="form-group">

                                                    <input type="email" class="form-control" id="exampleInputEmail2" name="email" placeholder="E-mail">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-1"><span class="glyphicon glyphicon-lock registerIcon" aria-hidden="true" id="lock"></span></div>

                                            <div class="col-md-10">
                                                <div class="form-group">
                                                    <input type="password" class="form-control" id="exampleInputName2" name="password" placeholder="Password">
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-warning btn-lg btnSignUp">Login</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">

                            <h4 class="modal-title">Login with:</h4>
                            <br>
                            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
                            <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a>

                        </div>

                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->